<!DOCTYPE html>
<html>
  <head>
    <title>Bookers22</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-header" style="color:white; margin-left:9%; font-size:20px;">
          <p>Bookers</p>
        </div>
        <ul class="nav navbar-nav navbar-right" style="margin-right:9%;">
          <% if user_signed_in? %>
            <li>
              <%= link_to user_path(current_user) do %>
                <span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
              <% end %>
            </li>
            <li>
              <%= link_to users_path do %>
                <span class="glyphicon glyphicon-user" aria-hidden="true"> Users</span>
              <% end %>
            </li>
            <li>
              <%= link_to books_path do %>
                <span class="glyphicon glyphicon-book" aria-hidden="true"> Books</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <span class="glyphicon glyphicon-log-out" aria-hidden="true"> Logout</span>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to root_path do %>
                <span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
              <% end %>
            </li>
            <li>
              <%= link_to about_path do %>
                <span class="glyphicon glyphicon-link" aria-hidden="true"> About</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do %>
                <span class="glyphicon glyphicon-edit" aria-hidden="true"> Signup</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do %>
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"> Signin</span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>
    <div class="container-fluid">
      <% if flash[:notice] %>
        <%= flash[:notice] %>
      <% end %>
      <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
          <%= yield %>
        </div>
        <div class="col-lg-1"></div>
      </div>
    </div>
  </body>
</html>
