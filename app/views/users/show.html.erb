<div class="row">
  <div class="col-lg-3">
    <%= render "users/new_show", user: @user, newbook: @newbook, passer: "/users/#{@user.id}" %>
  </div>
  <div class="col-lg-9">
    <h1>Books</h1>
    <table class="table">
      <tr>
        <th class="col-xs-2"></th>
        <th class="col-xs-2">Title</th>
        <th class="col-xs-8">Opinion</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td class="col-xs-2">
            <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %>
          </td>
          <td class="col-xs-2">
            <%= link_to book.title, book_path(book) %>
          </td>
          <td class="col-xs-8">
            <%= book.body %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
