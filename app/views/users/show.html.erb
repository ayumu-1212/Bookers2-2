<div class="row">
  <div class="col-lg-4">
    <%= render "users/new_show", user: @user, newbook: @newbook %>
  </div>
  <div class="col-lg-8">
    <h1>Books</h1>
    <table>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td>
          profile_image
          </td>
          <td>
            <%= link_to book.title, book_path(book) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
