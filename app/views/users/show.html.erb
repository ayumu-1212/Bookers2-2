<div class="row">
  <div class="col-lg-3">
    <%= render "users/new_show", user: @user, newbook: @newbook %>
  </div>
  <div class="col-lg-9">
    <h1>Books</h1>
    <table class="table">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %>
          </td>
          <td>
            <%= link_to book.title, book_path(book) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
