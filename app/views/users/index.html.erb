<div class="row">
	<div class="col-lg-3">
		<%= render 'users/new_show', user: @user, newbook: @newbook %>
	</div>
	<div class="col-lg-9">
		<h1>users</h1>
		<table class="table">
			<tr>
				<th>image</th>
				<th>name</th>
				<th></th>
			</tr>
			<% @users.each do |user| %>
				<tr>
					<td>
						<%= attachment_image_tag user, :profile_image,:fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %>
					</td>
					<td>
						<%= user.name %>
					</td>
					<td>
						<%= link_to "show", user_path(user) %>
					</td>
				</tr>
			<% end %>
		</table>
	</div>
</div>
