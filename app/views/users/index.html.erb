<div class="row">
	<div class="col-lg-3">
		<%= render 'users/new_show', user: @user, newbook: @newbook, passer: "/users", newtag: @newtag %>
	</div>
	<div class="col-lg-9">
		<h1>users</h1>
		<table class="table">
			<tr>
				<th class="col-xs-2">image</th>
				<th class="col-xs-2">name</th>
				<th class="col-xs-6">introduction</th>
				<th class="col-xs-2"></th>
			</tr>
			<% @users.each do |user| %>
				<tr>
					<td class="col-xs-2">
						<%= attachment_image_tag user, :profile_image,:fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %>
					</td>
					<td class="col-xs-2">
						<%= user.name %>
					</td>
					<td class="col-xs-6">
						<%= user.introduction %>
					</td>
					<td class="col-xs-2">
						<%= link_to "show", user_path(user) %>
					</td>
				</tr>
			<% end %>
		</table>
	</div>
</div>
