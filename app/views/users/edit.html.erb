<% if @user.errors.any? %>
  <div class="row">
    <h2>
    <%= @user.errors.count %>errors prohibited this obj from being saved:
    </h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h1>User info</h1>
<%# <%= devise_error_messages! %>
<%= form_for @user do |f| %>
  <p>Name</p>
  <%= f.text_field :name %>

  <p>Image</p>
  <%= f.attachment_field :profile_image %>

  <p>Introduction</p>
  <%= f.text_area :introduction %>
  <br>

  <%= f.submit "Update User" %>
<% end %>
