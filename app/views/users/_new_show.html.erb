<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
<table>
	<tr>
		<td>name</td>
		<td>
			<%= user.name %>
		</td>
	</tr>
	<tr>
		<td>introduction</td>
		<td>
			<%= user.introduction %>
		</td>
	</tr>
</table>
<%= link_to "Edit User", edit_user_path(user) %>

<h2>New book</h2>
<%= form_for newbook do |f| %>
	<p>Title</p>
	<%= f.text_field :title %>
	<p>Opinion<p>
	<%= f.text_area :body %>
	<br>
	<%= f.submit "Create Book" %>
<% end %>
