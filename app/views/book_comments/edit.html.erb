<div class="row">
  <h1>Reviews Editting</h1>
  <%= form_for [@book, @comment] do |f| %>
    <div class="form-group">
      <%= f.text_area :comment, class: "form-control", rows: "6" %>
    </div>
      <%= f.submit "update", type: "submit", class: "btn btn-success" %>
      <%= link_to "destroy", book_book_comment_path(book_id: @book.id, id: @comment.id), method: :delete ,"data-confirm" => "really delete?", type: "button", class:"btn btn-danger" %>
  <% end %>
</div>
<div class="row">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td class="col-xs-2">
          <%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag @book.user, :profile_image,:fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %><br>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td class="col-xs-2">
          <%= @book.title %>
        /td>
        <td class="col-xs-8">
          <%= @book.body %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
