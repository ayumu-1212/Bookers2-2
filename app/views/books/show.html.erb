<div class="row">
  <div class="col-lg-3">
    <%= render 'users/new_show', user: @user, newbook: @newbook %>
  </div>
  <div class="col-lg-9">
    <div class="row">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td class="col-xs-1">
              <%= link_to user_path(@book.user) do %>
                <%= attachment_image_tag @book.user, :profile_image,:fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td class="col-xs-2">
              <%= @book.title %>
            </td>
            <td class="col-xs-5">
              <%= @book.body %>
            </td>
            <td class="col-xs-1">
              <% if @book.liked_by?(current_user) %>
                <%= link_to book_likes_path(book_id: @book.id, pass: "/books/#{@book.id}"), method: :delete do %>
                  <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                  <%= @book.likes.count %>
                <% end %>
              <% else %>
                <%= link_to book_likes_path(book_id: @book.id, pass: "/books/#{@book.id}"), method: :post do %>
                  <i class="far fa-heart" aria-hidden="true"></i>
                  <%= @book.likes.count %>
                <% end %>
              <% end %>
            </td>
            <td class="col-xs-1">
                <i class="far fa-comment" aria-hidden="true"></i>
                <%= @book.book_comments.count %>
            </td>
            <% if @book.user == current_user %>
              <td class="col-xs-1">
                <%= link_to "edit", edit_book_path(@book), type: "button", class: "btn btn-success" %>
              </td>
              <td class="col-xs-1">
                <%= link_to "destroy", book_path(@book), method: :delete ,"data-confirm" => "really delete?", type: "button", class:"btn btn-danger" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="row">
		<h2>Likers</h2>
		<table class="table">
			<tr>
				<th class="col-xs-2">image</th>
				<th class="col-xs-2">name</th>
				<th class="col-xs-6">introduction</th>
				<th class="col-xs-2"></th>
			</tr>
			<% @book.likes.each do |like| %>
        <% user = like.user %>
				<tr>
					<td class="col-xs-2">
						<%= attachment_image_tag user, :profile_image,:fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %>
					</td>
					<td class="col-xs-2">
						<%= user.name %>
					</td>
					<td class="col-xs-6">
						<%= user.introduction %>
					</td>
					<td class="col-xs-2">
						<%= link_to "show", user_path(user) %>
					</td>
				</tr>
			<% end %>
		</table>
    </div>
    <div class="row">
      <h2>Reviews</h2>
      <table class="table">
        <tbody>
          <% @book.book_comments.each do |comment| %>
            <tr>
              <td class="col-xs-2">
                  <%= link_to user_path(comment.user) do %>
                    <%= attachment_image_tag comment.user, :profile_image,:fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %><br>
                    <%= comment.user.name %>
                <% end %>
              </td>
              <td class="col-xs-8">
                <%= comment.comment %>
              </td>
              <% if comment.user == current_user %>
                <td class="col-xs-1">
                  <%= link_to "edit", edit_book_book_comment_path(book_id: @book.id, id: comment.id), type: "button", class: "btn btn-success" %>
                </td>
                <td class="col-xs-1">
                    <%= link_to "destroy", book_book_comment_path(book_id: @book.id, id: comment.id), method: :delete ,"data-confirm" => "really delete?", type: "button", class:"btn btn-danger" %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="row">
      <h2>Create Review</h2>
        <%= form_for [@book, @comment] do |f| %>
          <%= f.text_area :comment%>
          <br>
          <%= f.submit "Review!" %>
        <% end %>
    </div>
  </div>
</div>
