<div class="row">
  <div class="col-lg-4">
    <%= render 'users/new_show', user: @user, newbook: @newbook %>
  </div>
  <div class="col-lg-8">
    <h1>Book detail</h1>
    <table>
      <tr>
        <td>
          <%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag @book.user, :profile_image,:fill, 100, 100, fallback: "no_image.jpg" %><br>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td>
          <%= @book.title %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <% if @book.user == current_user %>
          <td>
            <%= link_to "edit", edit_book_path(@book) %>
          </td>
          <td>
            <%= link_to "destroy", book_path(@book), method: :delete ,"data-confirm" => "really destroy?" %>
          </td>
        <% end %>
      </tr>
    </table>
  </div>
</div>
