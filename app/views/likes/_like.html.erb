<% if book.liked_by?(current_user) %>
  <%= link_to book_likes_path(book_id: book.id), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= book.likes.count %>
  <% end %>
<% else %>
  <%= link_to book_likes_path(book_id: book.id), method: :post, remote: true do %>
    <i class="far fa-heart" aria-hidden="true"></i>
    <%= book.likes.count %>
  <% end %>
<% end %>
